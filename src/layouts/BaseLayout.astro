---
import "../css/index.css";
import "../components/ThemeToggle.astro";
import Navigation from "../components/Navigation";
import Form from "../components/Form.astro";
import Footer from "../components/Footer.astro";
import BaseHead from "../components/BaseHead.astro";
import ThemeSwitcher from "../components/ThemeToggle.astro";
import "animate.css";

const { title, description, author, form, scrollToTop, skills, portfolio } =
	Astro.props;
---

<html lang="en" class="web-page">
	<BaseHead title={title} description={description} author={author} />
	<body>
		<Navigation client:only="react" skills={skills} portfolio={portfolio} />
		<main>
			<slot />
			<ThemeSwitcher />
			<Form form={form} />
		</main>
		<Footer scrollToTop={scrollToTop} />
	</body>
</html>
