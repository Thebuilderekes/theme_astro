<style>
	#ThemeSwitcher {
		border: 1px outset grey;
		box-shadow: 10px 10px 5px 0px rgba(0, 0, 0, 0.75);
		-webkit-box-shadow: 10px 10px 5px 0px rgba(0, 0, 0, 0.75);
		-moz-box-shadow: 10px 10px 5px 0px rgba(0, 0, 0, 0.75);
		background: none;
		display: flex;
		border-radius: 50%;
		justify-content: flex-end;
		position: fixed;
		bottom: var(--space-7);
		right: 0.7%;
		z-index: 700;
	}

	#ThemeSwitcher:active {
		animation: diagonal-down-right 0.2s linear;
	}

	@keyframes diagonal-down-right {
		from {
			transform: translate(0, 0);
		}
		to {
			transform: translate(5px, 5px);
		}
	}

	.sun {
		fill: transparent;
	}
	.moon {
		fill: rgb(59, 59, 75);
	}

	:global(.dark) .sun {
		fill: rgb(245, 222, 17);
	}
	:global(.dark) .moon {
		fill: transparent;
	}
</style>

<button aria-label="themeToggler" id="ThemeSwitcher">
	<svg width="50px" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
		<path
			class="moon"
			fill="rgb(34, 34, 43)"
			d="M16.5 6A10.5 10.5 0 0 1 4.7 16.4 8.5 8.5 0 1 0 16.4 4.7l.1 1.3zm-1.7-2a9 9 0 0 1 .2 2 9 9 0 0 1-11 8.8 9.4 9.4 0 0 1-.8-.3c-.4 0-.8.3-.7.7a10 10 0 0 0 .3.8 10 10 0 0 0 9.2 6 10 10 0 0 0 4-19.2 9.7 9.7 0 0 0-.9-.3c-.3-.1-.7.3-.6.7a9 9 0 0 1 .3.8z"
		></path>
		<path
			class="sun"
			fill="rgb(255, 255, 255)"
			d="M12 17.5a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zm0 1.5a7 7 0 1 0 0-14 7 7 0 0 0 0 14zm12-7a.8.8 0 0 1-.8.8h-2.4a.8.8 0 0 1 0-1.6h2.4a.8.8 0 0 1 .8.8zM4 12a.8.8 0 0 1-.8.8H.8a.8.8 0 0 1 0-1.6h2.5a.8.8 0 0 1 .8.8zm16.5-8.5a.8.8 0 0 1 0 1l-1.8 1.8a.8.8 0 0 1-1-1l1.7-1.8a.8.8 0 0 1 1 0zM6.3 17.7a.8.8 0 0 1 0 1l-1.7 1.8a.8.8 0 1 1-1-1l1.7-1.8a.8.8 0 0 1 1 0zM12 0a.8.8 0 0 1 .8.8v2.5a.8.8 0 0 1-1.6 0V.8A.8.8 0 0 1 12 0zm0 20a.8.8 0 0 1 .8.8v2.4a.8.8 0 0 1-1.6 0v-2.4a.8.8 0 0 1 .8-.8zM3.5 3.5a.8.8 0 0 1 1 0l1.8 1.8a.8.8 0 1 1-1 1L3.5 4.6a.8.8 0 0 1 0-1zm14.2 14.2a.8.8 0 0 1 1 0l1.8 1.7a.8.8 0 0 1-1 1l-1.8-1.7a.8.8 0 0 1 0-1z"
		></path>
	</svg>
</button>

<script>
	//select all elemets on the page
	const element = document.documentElement;
	const toggleButton = document.getElementById("ThemeSwitcher"); // themeswitcher button

	//array to hold the sections to be affected by the dark theme
	const themedSectionList = Array.from(
		document.querySelectorAll(
			".header, .hero-section, .hero-section-main-heading, .heading, .job-title, .specialty-paragraph, .skills-section, .portfolio-section, .portfolio-heading, .card, .form-section,.form-heading, .input-box, .submit-btn, .footer, .about-section, .go-to-home"
		)
	);
	//Theme functionalitys
	const theme =
		localStorage.getItem("theme") ||
		(window.matchMedia("(prefers-color-scheme: light)").matches
			? "light"
			: "dark");

	window.localStorage.setItem("theme", theme);

	//function to toggle the dark class on the sections
	const handleToggleClick = () => {
		themedSectionList.forEach((item) => item.classList.toggle("dark"));
		element.classList.toggle("dark");
		const isDark = element.classList.contains("dark");
		localStorage.setItem("theme", isDark ? "dark" : "light");
	};

	toggleButton.addEventListener("click", handleToggleClick);
</script>
