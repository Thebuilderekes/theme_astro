<style>
	/*FORM STYLES*/

	.form-section {
		background-color: var(--light-purple-color);
		font-family: "Inter", sans-serif;
	}

	.form-section.dark {
		background-color: var(--dark-purple-color);
		/* color: var(--light-grey-color); */
	}
	.visually-hidden {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border: 0;
	}

	.form-heading {
		font-family: "Inter", sans-serif;
		text-transform: uppercase;
		font-weight: 600;
		text-align: center;
		color: var(--light-grey-color);
	}

	.form-heading.dark {
		color: var(--light-grey-color);
	}

	@media (max-width: 800px) {
		footer h2 {
			font-size: 30px;
		}
	}

	.form-section h3 {
		font-family: "Inter", sans-serif, "arial";
		font-weight: 400;
		font-size: var(--fs-double);
		color: var(--light-grey-color);
		line-height: 1.5;
	}

	@media (max-width: 600px) {
		.form-section h3 {
			font-size: var(--fs-semi-medium);
		}
	}
	/* ///// inputs /////*/

	input:focus ~ label,
	textarea:focus ~ label,
	input:valid ~ label,
	textarea:valid ~ label {
		font-size: 0.75em;
		color: var(--light-grey-color);
		top: -5px;
		-webkit-transition: all 0.225s ease;
		transition: all 0.225s ease;
	}

	input::placeholder,
	textarea::placeholder {
		color: #8292a0;
	}

	.styled-input {
		float: left;
		width: 293px;
		margin: 1rem 0;
		position: relative;
		border-radius: 4px;
	}

	@media only screen and (max-width: 768px) {
		.styled-input {
			width: 100%;
		}
	}

	.styled-input label {
		padding: 1.3rem 30px 1rem 30px;
		position: absolute;
		top: 10px;
		left: 0;
		-webkit-transition: all 0.25s ease;
		transition: all 0.25s ease;
		pointer-events: none;
	}

	.styled-input.wide {
		width: 650px;
		max-width: 100%;
	}

	.input-box {
		padding: 30px;
		width: 100%;
		font-size: var(--fs-semi-medium);
		background-color: var(--light-grey-color);
		color: #000000;
		border-radius: 4px;
	}

	.input-box.dark {
		background-color: var(--mid-dark-purple-color);
		color: var(--light-grey-color);
	}

	.input-container {
		width: 650px;
		max-width: 100%;
		margin: 20px auto 25px auto;
	}

	input,
	textarea {
		border: 2px solid transparent;
	}

	input:focus,
	textarea:focus {
		border: 2px solid rgb(54, 53, 54);
	}

	input:focus ~ span,
	textarea:focus ~ span {
		width: 100%;
		-webkit-transition: all 0.075s ease;
		transition: all 0.075s ease;
	}

	textarea {
		width: 100%;
		min-height: 15em;
	}

	.submit-btn {
		padding: 7px 35px;
		border-radius: 60px;
		display: inline-block;
		margin: 0 auto;
		background: var(--darker-purple-color);
		color: var(--light-grey-color);
		font-size: var(--fs-semi-medium);
		cursor: pointer;
		box-shadow:
			0 2px 5px 0 rgba(0, 0, 0, 0.06),
			0 2px 10px 0 rgba(0, 0, 0, 0.07);
		-webkit-transition: all 300ms ease;
		transition: all 300ms ease;
	}

	.submit-btn.dark {
		background: var(--mid-dark-purple-color);
	}
	.submit-btn:hover {
		background: var(--dark-purple-color);
		color: var(--light-grey-color);
	}

	@media (max-width: 768px) {
		.submit-btn {
			width: 100%;
			float: none;
			text-align: center;
		}
	}
</style>

<section
	class="form-section px-8 py-16 bg-white flex flex-col justify-center"
	id="form"
>
	<div class="row">
		<h2 class="form-heading text-3xl sm:text-3xl md:text-4xl lg:text-5xl">
			Contact
		</h2>
	</div>
	<form class="pt-12 flex flex-col justify-center" action="post" method="post">
		<div class="row">
			<h3 style="text-align:center">I'd love to hear from you.</h3>
		</div>
		<div class="row input-container">
			<div class="col-xs-12">
				<div class="styled-input wide">
					<label class="visually-hidden" for="name">Name</label>
					<input
						type="text"
						name="name"
						autocomplete="given-name"
						id="name"
						required
						placeholder="Name"
						class="input-box"
					/>
				</div>
			</div>
			<div class="col-xs-12">
				<div class="styled-input">
					<label class="visually-hidden" for="email">Email</label>
					<input
						class="input-box"
						type="email"
						name="email"
						id="email"
						autocomplete="given-email"
						class="form-control"
						required
						placeholder="Email"
					/>
				</div>
			</div>
			<div class="col-md-6 col-sm-12">
				<div class="styled-input" style="float:right;">
					<label class="visually-hidden" for="text">Subject</label>
					<input
						class="input-box"
						type="text"
						name="text"
						id="text"
						required
						placeholder="Subject"
					/>
				</div>
			</div>
			<div class="col-xs-12">
				<div class="styled-input wide">
					<label class="visually-hidden" for="text-input">Message</label>

					<textarea
						required
						id="text-input"
						class="input-box"
						placeholder="Message"></textarea>
				</div>
			</div>
			<div class="col-xs-12">
				<button
					type="submit"
					aria-label="send message"
					class="btn-lrg submit-btn">Send Message</button
				>
			</div>
		</div>
	</form>
</section>
